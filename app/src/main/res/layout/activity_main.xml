<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/colorBackground" android:orientation="vertical"
>
    <TextView
            android:text=".\n.\n.\n>  Welcome to Universal Paperclips!"
            android:layout_width="match_parent"
            android:layout_height="75sp" android:id="@+id/aiText" android:textSize="14sp"
            android:background="@color/colorPrimary" android:textColor="@color/colorBackground"
            android:paddingBottom="5dp" android:paddingLeft="5dp" android:paddingRight="5dp" android:textStyle="bold"
            android:fontFamily="serif-monospace"/>
    <TextView
            android:text="Paperclips: 0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/paperclipCountText"
            android:textColor="@color/colorPrimaryDark" android:fontFamily="serif" android:textSize="18sp"
            android:padding="10dp" android:textStyle="bold"/>
    <Button
            android:text="Make Paperclip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/makePaperclipButton" android:layout_marginLeft="10dp"
            android:padding="10dp" android:layout_marginTop="10dp"/>
    <TextView
            android:text="Business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp" android:textStyle="bold" android:fontFamily="serif"
            android:textColor="@color/colorPrimaryDark"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    <TextView
            android:text="Available Funds: $ 0.00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/fundsText" android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp" android:fontFamily="serif"
            android:textColor="@color/colorPrimaryDark"/>
    <TextView
            android:text="Unsold Inventory: 0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/unsoldInventoryText" android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp" android:fontFamily="serif"
            android:textColor="@color/colorPrimaryDark"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="5dp">
        <Button
                android:text="lower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/lowerPriceButton" android:layout_weight="0"/>
        <Button
                android:text="raise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/raisePriceButton" android:layout_weight="0"/>
        <TextView
                android:text=" Price per Clip: $ .25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/ppcText" android:layout_marginLeft="10dp"
                android:fontFamily="serif"
                android:textColor="@color/colorPrimaryDark" android:layout_weight="1"/>
    </LinearLayout>
    <TextView
            android:text="Public Demand: 32%"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/pdText" android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp" android:fontFamily="serif"
            android:textColor="@color/colorPrimaryDark"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp">
        <Button
                android:text="Marketing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/marketingButton" android:layout_weight="0"
        />
        <TextView
                android:text=" Level: 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView10" android:layout_marginLeft="10dp"
                android:fontFamily="serif"
                android:textColor="@color/colorPrimaryDark" android:layout_weight="1"/>
    </LinearLayout>
    <TextView
            android:text="Cost: $ 100.00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView11" android:layout_marginLeft="20dp"
            android:fontFamily="serif"
            android:textColor="@color/colorPrimary"/>
    <TextView
            android:text="Manufacturing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView12" android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp" android:textStyle="bold" android:fontFamily="serif"
            android:textColor="@color/colorPrimaryDark"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" android:id="@+id/view2"/>
    <TextView
            android:text="Clips per Second: 0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView13" android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp" android:fontFamily="serif"
            android:textColor="@color/colorPrimaryDark"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp">
        <Button
                android:text="Wire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/wireButton" android:layout_weight="0"
        />
        <TextView
                android:text="1,000 inches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView14" android:layout_marginLeft="10dp"
                android:fontFamily="serif"
                android:textColor="@color/colorPrimaryDark" android:layout_weight="1"/>
    </LinearLayout>
    <TextView
            android:text="Cost: $ 15.00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView15" android:layout_marginLeft="20dp"
            android:fontFamily="serif"
            android:textColor="@color/colorPrimary"/>
</LinearLayout>